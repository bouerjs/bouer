{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "globals": {
    "builtin": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "curly": "off",
    "comma-dangle": "off",
    "arrow-parens": "off",
    "prefer-spread": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "prefer-rest-params": "off",
    "valid-jsdoc": "off",
    "no-debugger": "off",
    "prefer-promise-reject-errors": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoredNodes": ["ConditionalExpression"]
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error", {
        "code": 120
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-undef": "off",
    "eol-last": 0
  }
}